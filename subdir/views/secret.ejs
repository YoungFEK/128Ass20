<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible"
        content="IE=edge">
    <meta name="viewport" content= "width=device-width, initial-scale=1.0">
    <title>log-in</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
        }

        body {
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
            background: url("/source/bg.jpg") no-repeat center center fixed;
            background-size: cover;
        }
        #backtoLogin {
            color: #5d4037;
            font-size: 0.9rem;
            margin-bottom: 2rem;
            display: inline-block;
            white-space: nowrap;
            text-decoration: none;
            margin-left: -1rem;
        }

        .container {
            display: flex;
            width: 850px;
            height: 650px;
            background: rgba(255, 255, 255, 0.92);
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            backdrop-filter: blur(8px);
        }

        .login-box {
            flex: 1;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #333;
        }

        .login-box h1 {
            font-family: "Cursive", sans-serif;
            font-weight: 600;
            color: #3e2723;
            margin-top: -1rem;
            margin-bottom: 0.3rem;
        }

        .login-box h3 {
            color: #5d4037;
            font-size: 0.9rem;
            margin-bottom: 2rem;
        }

        label {
            font-size: 0.9rem;
            color: #444;
            margin-bottom: 0.3rem;
            display: block;
        }

        input[type="text"],
        input[type="password"],
        input[type="security-answer"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 1.2rem;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
        }

        #security-question{
            width: 100%;
            padding: 10px;
            margin-bottom: 1.2rem;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
        }


        .forgot a {
            color: #795548;
            font-size: 0.85rem;
            text-decoration: none;
        }

        .forgot a:hover {
            text-decoration: underline;
        }


        button {
            background-color: #3e2723;
            color: white;
            border: none;
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            transition: 0.2s;
            margin-top: 2rem;
        }


        button:hover {
            background-color: #5d4037;
        }



        .signup a {
            color: #795548;
            text-decoration: none;
            font-weight: 500;
        }

        .signup a:hover {
            text-decoration: underline;
        }

        /* Responsive tweak for smaller screens */
        @media (max-width: 900px) {
            .container {
                flex-direction: column;
                width: 90%;
                height: auto;
            }


            .login-box {
                padding: 2rem;
            }
        }
    </style>
    
</head>

<body>
    <div class="container">
        <div class="login-box">
            <h1>Account Page</h1>
            <h3>Details</h3>

            <label>Username</label>
            <input type="text" class="user-name" value="<%= User.username %>" data-id="<%= User.id %>">

            <label>Name</label>
            <input type="text" class="profile-name" value="<%= User.name %>" data-id="<%= User.id %>">

            <!-- <button class="goto_security" data-id="<%= User._id %>">Change Password </button> -->
            <a href="/security/<%= User._id %>" class="goto_security">Change Password</a>

        </div>

    </div>

  


       
        

   

   
</body>

<script>
        document.querySelector('.user-name').addEventListener('input', async (e) => {
            const userId = e.target.dataset.id;   // get task id from data-id
            const newName = e.target.value;       // get the new task name

            try {
                const resp = await fetch('/updateName', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'include',
                body: JSON.stringify({ name: newName, id: userId }),
                });

                if (!resp.ok) {
                    console.error('Error updating task:', await resp.text());
                }
            } catch (err) {
                console.error('Network error:', err);
            }
        });

        document.querySelector('.profile-name').addEventListener('input', async (e) => {
            const userId = e.target.dataset.id;   // get task id from data-id
            const newName = e.target.value;       // get the new task name

            try {
                const resp = await fetch('/updateProfileName', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({ name: newName, id: userId }),
                });

                if (!resp.ok) {
                    console.error('Error updating task:', await resp.text());
                }
            } catch (err) {
                console.error('Network error:', err);
            }
        });
        



</script>

</html>